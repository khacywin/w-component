{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "allowJs": true,
    "paths": {
      "components": ["components"],
      "components/es/*": ["components/*"]
    },
  },
  "include": [ "components", "components/.ts", "components/.d.ts"  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "es"
  ]
}