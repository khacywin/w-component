{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "",
    "declaration": true,
    "declarationDir": "lib",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "w-components": ["./components"],
      "w-components/lib/*": ["./components/*"]
    },
    "outDir": "lib",
    "skipLibCheck": true,
    "target": "es6",
  },
  "include": [ "components", "components/.ts", "components/.d.ts"  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "es"
  ]
}