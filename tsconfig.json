{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib",
    "module": "ES2015",
    "target": "ES6",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "components": ["./components"],
      "styles/*": ["./components/styles/*"],
      "hooks/*": ["./components/_util/hooks/*"],
      "util/*": ["./components/_util/*"]
    },
    "allowJs": true
  },
  "include": [
    "components/**/*",
    "components/**/**/*",
    "components/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib/**/*",
    "es/**/*",
    "**/*.stories.tsx",
    "**/*.test.tsx"
  ]
}